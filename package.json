{
  "name": "angular-spa-app",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:all": "npm run start:angular & npm run start:react & npm run serve:root",
    "start:angular": "ng serve --port 4200",
    "start:react": "cd react-mfe && npm start",
    "serve:root": "npx serve . -p 3000 -s",
    "build": "ng build",
    "build:single-spa": "webpack --config webpack.config.single-spa.js",
    "build:all": "npm run build && cd react-mfe && npm run build",
    "install:all": "npm install && cd react-mfe && npm install",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "deploy:swa": "npx @azure/static-web-apps-cli deploy ./deployment-files --env production",
    "prepare:deploy": "rm -rf deployment-files && mkdir deployment-files && cp dist/* deployment-files/ 2>/dev/null || cp -r dist/* deployment-files/"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.0.0",
    "@angular/common": "^19.0.0",
    "@angular/compiler": "^19.0.0",
    "@angular/core": "^19.0.0",
    "@angular/forms": "^19.0.0",
    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@angular/router": "^19.0.0",
    "rxjs": "^7.8.0",
    "single-spa": "^5.9.5",
    "single-spa-angular": "^9.0.0",
    "systemjs": "^6.14.2",
    "tslib": "^2.1.0",
    "zone.js": "^0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.0",
    "@angular/cli": "^19.0.0",
    "@angular/compiler-cli": "^19.0.0",
    "@types/node": "^20.0.0",
    "css-loader": "^7.1.2",
    "serve": "^14.2.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.6.3",
    "webpack": "^5.101.2",
    "webpack-cli": "^6.0.1"
  }
}
